{
  "name": "react-qr-hooks",
  "version": "1.0.0-beta.1",
  "description": "Encode & decode QR code in React",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-qr-hooks.cjs.js",
  "module": "lib/react-qr-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-qr-hooks.git"
  },
  "keywords": [
    "qr",
    "hooks",
    "React",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-qr-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-qr-hooks#readme",
  "devDependencies": {
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.17",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "qrcode": "^1.4.4",
    "react": "^16.12.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "peerDependencies": {
    "qrcode": "^1.4.4",
    "qrcode-image-parser": "^1.0.4",
    "react": ">=16.8.0"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
