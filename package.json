{
  "name": "react-qr-hooks",
  "version": "1.1.0",
  "description": "Encode & decode QR code in React",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-qr-hooks.cjs.js",
  "module": "lib/react-qr-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cool-hooks/react-qr-hooks.git"
  },
  "keywords": [
    "qrcode",
    "react",
    "hooks",
    "library",
    "encoder",
    "decoder"
  ],
  "bugs": {
    "url": "https://github.com/cool-hooks/react-qr-hooks/issues"
  },
  "homepage": "https://github.com/cool-hooks/react-qr-hooks#readme",
  "dependencies": {
    "qrcode": "^1.4.4",
    "qrcode-decoder": "^0.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.2.1",
    "@types/qrcode": "^1.3.4",
    "@types/react": "^16.9.34",
    "@typescript-eslint/parser": "^2.27.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "expo-barcode-scanner": "^8.1.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-native-camera": "^3.22.1",
    "react-test-renderer": "^16.13.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3",
    "semantic-release": "^17.1.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
